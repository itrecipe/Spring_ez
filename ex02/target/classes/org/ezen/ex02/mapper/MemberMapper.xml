<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="org.ezen.ex02.mapper.MemberMapper">
 
 	<!-- 여러개 넘길때는 이렇게 사용함,
 		id는 pk, property는 memberVO의 멤버변수, column은 테이블의 컬럼명 -->
 	<resultMap type="org.ezen.ex02.domain.MemberVO" id="memberMap">
 		<id property="userid" column="userid"/>
 		<result property="userid" column="userid"/>
 		<result property="userpw" column="userpw"/>
 		<result property="username" column="username"/>
 		<result property="regDate" column="regDate"/>
 		<result property="updateDate" column="updateDate"/>
 		<collection property="authList" resultMap="authMap">
 		</collection>
 	</resultMap>
 
 	<select id="read" resultMap="memberMap">
 		SELECT
 		mem.userid, userpw, username, enabled, regdcate, updatedate, auth
 		from
 		tbl_member mem left outer join tbl_member_auth auth on mem.userid = auto.userid
 		where mem.userid = #{userid}
 	</select>
 
 </mapper>