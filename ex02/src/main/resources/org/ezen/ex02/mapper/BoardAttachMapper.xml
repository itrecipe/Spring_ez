<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ezen.ex02.mapper.BoardAttachMapper">
<!-- namespace는 BoardMapperd 인터페이스의 URL -->

<!-- java의 boolean형인 fileType은 문자 '0'이나 '1'로 처리(true는 '1') -->
<insert id="insert">
	insert into tbl_attach(uuid, uploadPath, fileName, 
	fileType, bno)
	values (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{bno})
</insert>

<!-- 첨부 파일 하나 지우기, uuid가 PK이다. -->
<delete id="delete">
	delete from tbl_attach where uuid = #{uuid}
</delete>

<select id="findByBno" resultType="org.ezen.ex02.domain.BoardAttachVO">
	select * from tbl_attach where bno = #{bno}
</select> 

</mapper>